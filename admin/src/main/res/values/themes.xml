<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 基本样式 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- title 标题栏字体设置-->
        <item name="titleTextAppearance">@color/font_white</item>
        <item name="android:titleTextAppearance" tools:targetApi="lollipop">
            @color/font_white
        </item>
        <!-- TextHint颜色 -->
        <item name="android:textColorHint" tools:targetApi="lollipop">
            @color/font_hint
        </item>
        <!-- Button，textView的文字颜色 -->
        <item name="android:textColor">@color/font_black</item>
        <!-- 应用的主要文字颜色，actionBar的标题文字默认使用该颜色 -->
        <item name="android:textColorPrimary">@color/font_grey</item>
        <!-- ToolBar上的Title颜色 -->
        <item name="android:textColorPrimaryInverse">@color/font_white</item>
        <!-- RadioButton checkbox等控件的文字 -->
        <item name="android:textColorPrimaryDisableOnly">@color/font_black</item>

        <!-- 字体允许小写 -->
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

        <!-- 页面背景颜色 -->
        <item name="android:windowBackground">@color/background_color</item>
        <!-- 应用的背景色，popMenu的背景默认使用该颜色 -->
        <item name="android:colorBackground">@color/font_white</item>
        <!-- 应用的前景色，ListView的分割线，switch滑动区默认使用该颜色 -->
        <item name="android:colorForeground">@color/foreground_color</item>

        <!--对话框的背景是否变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 对话框样式 -->
        <item name="alertDialogTheme">@style/mAlertTheme</item>

        <!-- 整体跳转动画，也可在BaseActivity中动态设置 -->
        <item name="android:windowAnimationStyle">@style/mSlideAnim</item>
    </style>

    <style name="mAlertTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!-- title 和 button 的颜色 -->
        <item name="android:textColor">@color/font_black</item>
        <!-- message 的颜色 -->
        <item name="android:textColorPrimary">@color/font_grey</item>
    </style>

    <!-- activity跳转动画 -->
    <style name="mSlideAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in_300</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out_300</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in_300</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out_300</item>
    </style>

    <!-- activity跳转动画 -->
    <style name="mAlphaAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/alpha_show_300</item>
        <item name="android:activityOpenExitAnimation">@anim/alpha_hide_300</item>
    </style>

    <style name="AppThemeGreen" parent="AppTheme">
        <!-- Appbar背景色，应用的主要色调，actionBar默认使用该颜色 -->
        <item name="colorPrimary">@color/theme_green_primary</item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">
            @color/theme_green_primary
        </item>
        <!-- 状态栏颜色，应用的主要暗色调，statusBarColor默认使用该颜色 -->
        <item name="colorPrimaryDark">@color/theme_green_dark</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">
            @color/theme_green_dark
        </item>
        <!-- 控件的选种效果默认采用该颜色 -->
        <item name="colorAccent">@color/theme_green_accent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">
            @color/theme_green_accent
        </item>

        <!-- 状态栏颜色，默认使用colorPrimaryDark 直接在status中覆盖dark，所以trans会漏出dark-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/theme_green_primary
        </item>
        <!-- 底部导航栏颜色 -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/theme_green_primary
        </item>

        <!-- 默认按钮的背景颜色 -->
        <item name="colorButtonNormal">@color/theme_green_primary</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">
            @color/theme_green_primary
        </item>
        <!-- 控制控件的默认颜色 -->
        <item name="colorControlNormal">@color/theme_green_light</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">
            @color/theme_green_light
        </item>
        <!-- 控件按压时的色调 -->
        <item name="colorControlHighlight">@color/theme_green_accent</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">
            @color/theme_green_accent
        </item>
        <!-- 获取焦点颜色 -->
        <item name="colorControlActivated">@color/theme_green_accent</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">
            @color/theme_green_accent
        </item>
    </style>

</resources>