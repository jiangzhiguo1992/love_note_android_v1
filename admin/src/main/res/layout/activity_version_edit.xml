<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VersionEditActivity">

    <include layout="@layout/view_top_bar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/etName"
                style="@style/FontGreyNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_enable_press_stroke_light_primary_dark_r3"
                android:hint="version_name"
                android:padding="10dp"
                android:textColorHint="@color/font_hint"/>

            <EditText
                android:id="@+id/etCode"
                style="@style/FontGreyNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_enable_press_stroke_light_primary_dark_r3"
                android:hint="version_code"
                android:inputType="number"
                android:padding="10dp"
                android:textColorHint="@color/font_hint"/>

            <EditText
                android:id="@+id/etUrl"
                style="@style/FontGreyNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_enable_press_stroke_light_primary_dark_r3"
                android:hint="update_url(需提前上传apk)"
                android:padding="10dp"
                android:textColorHint="@color/font_hint"/>

            <EditText
                android:id="@+id/etLog"
                style="@style/FontGreyNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_enable_press_stroke_light_primary_dark_r3"
                android:gravity="start"
                android:hint="update_log"
                android:inputType="textMultiLine"
                android:minLines="10"
                android:padding="8dp"
                android:textColorHint="@color/font_hint"/>

            <Button
                android:id="@+id/btnPush"
                style="@style/FontWhiteNormalBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/push"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
