<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- AppBarLayout(android:theme里加,可调整字体颜色) app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Toolbar(上面加了,这里可以不加) app:popupTheme="@style/ThemeOverlay.AppCompat.Light" -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- 水波纹,点击效果(setClickListener还会有声音),CardView要加以下 -->
    <!--<item name="android:clickable">true</item>-->
    <style name="SelectRipple">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- 自定义对话框样式 -->
    <style name="AlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!-- title 和 button 的颜色 -->
        <item name="android:textColor">@color/color_primary_dark</item>
        <!-- message 的颜色 -->
        <item name="android:textColorPrimary">@color/font_primary</item>
    </style>

    <!-- 自定义对话框样式 -->
    <style name="DialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowBackground">@color/trans_00</item><!--背景透明-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <!-- 对话框出入动画 -->
    <style name="DialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_dialog_out</item>
    </style>

    <!-- 横线 -->
    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_gray</item>
    </style>

    <!-- 竖线 -->
    <style name="LineVertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_gray</item>
    </style>

