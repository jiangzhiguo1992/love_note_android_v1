<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".controller.activity.couple.CoupleInfoActivity">

    <include layout="@layout/view_top_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.jiangzg.lovenote.view.FrescoAvatarView
                android:id="@+id/ivAvatarLeft"
                android:layout_width="80dp"
                android:layout_height="80dp"
                tools:background="@mipmap/ic_account_circle_grey_48dp"/>

            <TextView
                android:id="@+id/tvNameLeft"
                style="@style/FontWhiteNormalBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_stroke_white_r100"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:text="名字最多六字"/>

            <TextView
                android:id="@+id/tvPhoneLeft"
                style="@style/FontWhiteNormalBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_stroke_white_r100"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:text="18600757123"/>

            <TextView
                android:id="@+id/tvBirthLeft"
                style="@style/FontWhiteNormalBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_stroke_white_r100"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:text="92.07.12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.jiangzg.lovenote.view.FrescoAvatarView
                android:id="@+id/ivAvatarRight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                tools:background="@mipmap/ic_account_circle_grey_48dp"/>

            <TextView
                android:id="@+id/tvNameRight"
                style="@style/FontWhiteNormalBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_stroke_white_r100"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:text="名字最多六字"/>

            <TextView
                android:id="@+id/tvPhoneRight"
                style="@style/FontWhiteNormalBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_stroke_white_r100"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:text="18600757123"/>

            <TextView
                android:id="@+id/tvBirthRight"
                style="@style/FontWhiteNormalBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_stroke_white_r100"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:text="92.07.12"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cvTogether"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="?attr/selectableItemBackground"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/radius_big"
            app:cardElevation="@dimen/elevation_big"
            app:cardMaxElevation="@dimen/elevation_huge">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/ic_favorite_grey_18dp"
                    android:tint="?attr/colorPrimary"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/ic_favorite_grey_18dp"
                    android:tint="?attr/colorPrimary"/>

                <RelativeLayout
                    android:id="@+id/rlTogetherDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/tvTogetherBefore"
                        style="@style/FontPrimaryNormalBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tvTogether"
                        android:layout_marginEnd="2.5dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/in_together"/>

                    <TextView
                        android:id="@+id/tvTogether"
                        style="@style/FontPrimaryHugeBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2.5dp"
                        android:layout_marginEnd="2.5dp"
                        android:layout_toEndOf="@+id/tvTogetherBefore"
                        android:textSize="50sp"
                        tools:text="365000"/>

                    <TextView
                        android:id="@+id/tvTogetherAfter"
                        style="@style/FontPrimaryNormalBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tvTogether"
                        android:layout_marginStart="2.5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@+id/tvTogether"
                        android:text="@string/dayT"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvTogetherTimer"
                    style="@style/FontPrimaryHuge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTogetherDay"
                    android:layout_centerHorizontal="true"
                    tools:text="34:22:11"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>
