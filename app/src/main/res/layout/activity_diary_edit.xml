<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.activity.note.DiaryEditActivity">

    <include layout="@layout/view_top_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnHappenAt"
                style="@style/FontWhiteNormalBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/selector_enable_press_solid_light_primary_dark_r100"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                tools:text="2017年 4月 19日"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <EditText
                    android:id="@+id/etContent"
                    style="@style/FontGreyNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/selector_enable_press_stroke_light_primary_dark_r3"
                    android:gravity="start"
                    android:hint="@string/please_input_content"
                    android:inputType="textMultiLine"
                    android:minLines="10"
                    android:padding="8dp"
                    android:textColorHint="@color/font_hint"/>

                <TextView
                    android:id="@+id/tvContentLimit"
                    style="@style/FontGreySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etContent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    tools:text="0/2000"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
