<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_top_bar"/>

    <com.jiangzg.lovenote.view.GSwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- 纪念日 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_gradient_primary_back">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cvSouvenir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="?attr/selectableItemBackground"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/radius_normal"
                            app:cardElevation="@dimen/elevation_normal"
                            app:cardMaxElevation="@dimen/elevation_big">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="10dp"
                                    android:src="@mipmap/ic_note_souvenir_48dp"/>

                                <RelativeLayout
                                    android:id="@+id/rlSouvenir"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|start"
                                    android:visibility="gone"
                                    tools:visibility="visible">

                                    <TextView
                                        android:id="@+id/tvSouvenirYear"
                                        style="@style/FontPrimaryBig"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="三周年"/>

                                    <TextView
                                        android:id="@+id/tvSouvenirTitle"
                                        style="@style/FontGreyNormalBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@+id/tvSouvenirYear"
                                        android:layout_alignBottom="@+id/tvSouvenirYear"
                                        android:layout_marginStart="10dp"
                                        android:layout_toEndOf="@+id/tvSouvenirYear"
                                        android:ellipsize="end"
                                        android:gravity="center"
                                        android:minLines="1"
                                        android:singleLine="true"
                                        tools:text="第一次拉手手"/>

                                    <TextView
                                        android:id="@+id/tvSouvenirCountDown"
                                        style="@style/FontPrimaryHugeBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvSouvenirYear"
                                        android:layout_marginTop="3dp"
                                        android:gravity="center"
                                        tools:text="倒计时 XX天 XX:XX:XX"/>
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/tvSouvenirEmpty"
                                    style="@style/FontGreyBigBold"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/per_day_is_souvenir"
                                    android:visibility="gone"
                                    tools:visibility="gone"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            style="@style/LineHorizontal"
                            android:layout_weight="1"/>

                        <TextView
                            style="@style/FontGreySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="@string/live"
                            android:textColor="@color/font_hint"/>

                        <View
                            style="@style/LineHorizontal"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <!-- 生活 -->
                    <LinearLayout
