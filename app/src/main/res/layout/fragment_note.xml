                            <TextView
                                style="@style/FontGreyNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/ic_note_award_24dp"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="@string/award"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cvDream"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/alpha_00"
                            app:cardCornerRadius="@dimen/radius_normal"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="@dimen/elevation_normal">

                            <TextView
                                style="@style/FontGreyNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/ic_note_dream_24dp"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="@string/dream"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cvMovie"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/alpha_00"
                            app:cardCornerRadius="@dimen/radius_normal"
