<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jiangzg.mianmian.activity.common.SuggestAddActivity">

    <include layout="@layout/view_top_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvType"
                style="@style/FontPrimaryNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:text="@string/click_me_choose_type"
                android:textColor="@color/selector_text_press_primary_dark"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/FontGreyNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"/>

                <TextView
                    android:id="@+id/tvTitleLimit"
                    style="@style/FontGreySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvTitle"
                    android:layout_alignParentEnd="true"
                    tools:text="0/20"/>

                <EditText
                    android:id="@+id/etTitle"
                    style="@style/FontGreyNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTitleLimit"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/selector_btn_r3_stroke_primary"
                    android:hint="@string/please_input_title"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="8dp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvContent"
                    style="@style/FontGreyNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/content"/>

                <TextView
                    android:id="@+id/tvContentLimit"
                    style="@style/FontGreySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvContent"
                    android:layout_alignParentEnd="true"
                    tools:text="0/20"/>

                <EditText
                    android:id="@+id/etContent"
                    style="@style/FontGreyNormal"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/tvContentLimit"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/selector_btn_r3_stroke_primary"
                    android:gravity="start"
                    android:hint="@string/please_input_content"
                    android:inputType="textMultiLine"
                    android:padding="8dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvImageToggle"
                style="@style/FontPrimaryNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/click_me_add_image"
                android:textColor="@color/selector_text_press_primary_dark"
                android:textStyle="bold"/>


            <com.jiangzg.mianmian.view.GImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                app:actualImageScaleType="centerInside"
                tools:src="@mipmap/test_bg_04"
                tools:visibility="visible"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnPush"
        style="@style/FontWhiteBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_solid_dark"
        android:text="@string/push"/>
</LinearLayout>
