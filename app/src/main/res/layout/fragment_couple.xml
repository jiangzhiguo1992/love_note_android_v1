<?xml version="1.0" encoding="utf-8"?>
<com.jiangzg.mianmian.view.GSwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- 轮播背景 -->
        <com.jiangzg.mianmian.view.WallPaperPager
            android:id="@+id/vpWallPaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- 背景图之上的view -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 顶部操作条 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gradient_primary_trans">

                <ImageView
                    android:id="@+id/ivHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:alpha="0.7"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_help_circle_solid_white"/>

                <ImageView
                    android:id="@+id/ivWallPaper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:alpha="0.7"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_image_grey"/>
            </RelativeLayout>

            <!-- 中部操作条 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnPair"
                    style="@style/FontWhiteBig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/selector_press_solid_dark_accent"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/quick_pair_deblock_more_posture"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvCoupleCountDown"
                    style="@style/FontPrimaryHuge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="20:12:23"/>

                <TextView
                    android:id="@+id/tvAddWallPaper"
                    style="@style/FontPrimaryHuge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:shadowColor="@color/black_trans_25"
                    android:shadowDx="30"
                    android:shadowDy="30"
                    android:shadowRadius="20"
                    android:text="@string/click_right_top_add_wall_paper"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </RelativeLayout>

            <!-- 底部信息栏 -->
            <LinearLayout
                android:id="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gradient_trans_light_accent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- 用户信息 -->
                <LinearLayout
                    android:id="@+id/llCoupleInfo"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp">

                    <com.jiangzg.mianmian.view.FrescoAvatarView
                        android:id="@+id/ivAvatarLeft"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        tools:src="@mipmap/ic_boy_circle"/>

                    <TextView
                        android:id="@+id/tvNameLeft"
                        style="@style/FontWhiteNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:maxLines="1"
                        android:shadowColor="@color/black_trans_50"
                        android:shadowRadius="10"
                        android:singleLine="true"
                        tools:text="爱称"/>

                    <TextView
                        android:id="@+id/tvNameRight"
                        style="@style/FontWhiteNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="1"
                        android:shadowColor="@color/black_trans_50"
                        android:shadowRadius="10"
                        android:singleLine="true"
                        tools:text="爱称"/>

                    <com.jiangzg.mianmian.view.FrescoAvatarView
                        android:id="@+id/ivAvatarRight"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        tools:src="@mipmap/ic_girl_circle"/>
                </LinearLayout>

                <!-- 地址/天气 -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/radius_big"
                    app:cardElevation="@dimen/elevation_big"
                    app:cardMaxElevation="@dimen/elevation_huge">

                    <LinearLayout
                        android:id="@+id/llPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="10dp">

                            <com.jiangzg.mianmian.view.GMarqueeText
                                android:id="@+id/tvPlaceLeft"
                                style="@style/FontGreySmall"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                tools:text="@string/now_no_address_info"/>

                            <TextView
                                android:id="@+id/tvDistance"
                                style="@style/FontBlackSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                tools:text="@string/distance_space_holder"/>

                            <com.jiangzg.mianmian.view.GMarqueeText
                                android:id="@+id/tvPlaceRight"
                                style="@style/FontGreySmall"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                tools:text="@string/now_no_address_info"/>
                        </LinearLayout>

                        <View
                            style="@style/LineHorizontal"
                            android:background="?attr/colorControlNormal"/>

                        <LinearLayout
                            android:id="@+id/llWeather"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="10dp">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center">

                                <com.jiangzg.mianmian.view.GMarqueeText
                                    android:id="@+id/tvWeatherLeft"
                                    style="@style/FontGreySmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    tools:drawableStart="@mipmap/w1"
                                    tools:text="@string/now_no_weather_info"/>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tvWeatherDiffer"
                                style="@style/FontBlackSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                tools:text="@string/differ_space_holder"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center">

                                <com.jiangzg.mianmian.view.GMarqueeText
                                    android:id="@+id/tvWeatherRight"
                                    style="@style/FontGreySmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    tools:drawableStart="@mipmap/w45"
                                    tools:text="@string/now_no_weather_info"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</com.jiangzg.mianmian.view.GSwipeRefreshLayout>
