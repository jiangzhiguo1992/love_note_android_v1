<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.activity.note.WhisperListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_top_bar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCurrentChannel"
                style="@style/FontWhiteBigBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="当前频道：我爱你"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etChannel"
                    style="@style/FontGreyNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_solid_white_r3"
                    android:gravity="center"
                    android:hint="@string/in_here_input_channel"
                    android:maxLines="1"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:textColorHint="@color/font_hint"/>

                <Button
                    android:id="@+id/btnChangeChannel"
                    style="@style/FontPrimaryNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_solid_white_r100"
                    android:text="@string/change_channel"/>
            </LinearLayout>
        </LinearLayout>

        <com.jiangzg.lovenote.view.GSwipeRefreshLayout
            android:id="@+id/srl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/list_item_whisper_left"/>
        </com.jiangzg.lovenote.view.GSwipeRefreshLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_line_border_grey_in_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAddImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    style="@style/FontGreyNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_image_grey_18dp"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="@string/add_image"/>
            </LinearLayout>

            <View style="@style/LineVertical"/>

            <LinearLayout
                android:id="@+id/llAddText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    style="@style/FontGreyNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_text_format_grey_18dp"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="@string/add_text"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlComment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/layer_line_border_grey_in_white"
        app:behavior_hideable="true"
        app:behavior_peekHeight="200dp"
        app:elevation="@dimen/elevation_normal"
        app:layout_behavior="@string/bottom_sheet_behavior"
        tools:visibility="gone">

        <RelativeLayout
            android:id="@+id/rlCommentTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCommentClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@mipmap/ic_close_grey_24dp"/>

            <TextView
                android:id="@+id/tvCommentLimit"
                style="@style/FontGreySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:text="0/200"/>

            <ImageView
                android:id="@+id/ivAddCommit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@mipmap/ic_near_me_grey_24dp"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/etComment"
            style="@style/FontGreyNormal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlCommentTop"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_stroke_primary_r3"
            android:gravity="start"
            android:hint="@string/please_input_content"
            android:inputType="textMultiLine"
            android:padding="8dp"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
