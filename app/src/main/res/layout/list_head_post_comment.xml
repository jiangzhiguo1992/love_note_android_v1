<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/rlCouple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <android.support.v7.widget.CardView
            android:id="@+id/cvAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/elevation_normal"
            app:cardMaxElevation="@dimen/elevation_big">

            <com.jiangzg.lovenote.view.FrescoAvatarView
                android:id="@+id/ivAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:background="@mipmap/ic_account_circle_grey_48dp"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvName"
            style="@style/FontBlackNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cvAvatar"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/cvAvatar"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            tools:text="名称名称名称名称名称"/>

        <TextView
            android:id="@+id/tvTime"
            style="@style/FontGreySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cvAvatar"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/cvAvatar"
            tools:text="2018-09-10 29:11"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        style="@style/FontBlackBigBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题"
        tools:visibility="visible"/>

    <com.jiangzg.lovenote.view.GWrapView
        android:id="@+id/wvTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tvContent"
        style="@style/FontGreyNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        tools:text="建议内容建议内容建议内容建议内容建议内容建议内容建建议内容建议内容建议内容建议内容建议内容建议内容建建议内容建议内容建议内容建议内容建议内容建议内容建建议内容建议内容建议内容建议内容建议内容建议内容建建议内容建议内容建议内容建议内容建议内容建议内容建建议内容建议内容建议内容建议内容建议内容建议内容建"
        tools:visibility="visible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="7.5dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/background_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCommentUser"
            style="@style/FontPrimaryNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackground"
            android:ellipsize="middle"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="20dp"
            android:paddingBottom="15dp"
            android:singleLine="true"
            tools:text="全部"/>

        <TextView
            android:id="@+id/tvCommentSort"
            style="@style/FontPrimaryNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackground"
            android:ellipsize="middle"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:singleLine="true"
            tools:text="排序"/>
    </RelativeLayout>
</LinearLayout>
