<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 初始值200dp，最小值100dp -->
        <com.jiangzg.lovenote.view.FrescoView
            android:id="@+id/ivPicture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="?attr/selectableItemBackground"
            android:foreground="?attr/selectableItemBackground"
            android:maxHeight="500dp"
            android:minHeight="50dp"
            app:actualImageScaleType="centerCrop"
            tools:background="@mipmap/ic_launcher"/>

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivPicture"
            android:orientation="vertical"
            tools:background="?attr/colorPrimary">

            <TextView
                android:id="@+id/tvHappenAt"
                style="@style/FontWhiteNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_access_time_white_18dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:visibility="gone"
                tools:text="2018-5-6"
                tools:visibility="visible"/>

            <View
                android:id="@+id/vLine"
                style="@style/LineHorizontal"
                android:background="@color/white"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvAddress"
                style="@style/FontWhiteSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@mipmap/ic_location_on_white_18dp"
                android:drawablePadding="6dp"
                android:ellipsize="middle"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:visibility="gone"
                tools:text="阳光大道阳光大道阳光大道阳光大道阳光大道"
                tools:visibility="visible"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
