<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.jiangzg.mianmian.activity.book.AlbumEditActivity">

    <include layout="@layout/view_top_bar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/abl"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etTitle"
            style="@style/FontBlackNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/please_input_album_name"
            android:maxLines="1"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/tilTitle"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_stroke_primary_r3"
        android:elevation="@dimen/elevation_normal"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_add_xi_grey"
        android:tint="?attr/colorPrimary"
        android:visibility="gone"
        tools:visibility="visible"/>

    <com.jiangzg.mianmian.view.GImageView
        android:id="@+id/ivAlbum"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/tilTitle"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackground"
        android:foreground="?attr/selectableItemBackground"
        android:visibility="gone"
        app:actualImageScaleType="centerCrop"
        tools:scaleType="centerCrop"
        tools:src="@mipmap/test_bg_2"
        tools:visibility="visible"/>

    <Button
        android:id="@+id/btnCommit"
        style="@style/FontWhiteNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_solid_dark_press"
        android:enabled="false"
        android:text="@string/commit"/>
</RelativeLayout>
