<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jiangzg.ita.fragment.PairFragment">

    <include layout="@layout/view_top_bar"/>

    <com.jiangzg.ita.view.GVerticalSwipeRefresh
        android:id="@+id/vsr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        style="@style/FontPrimaryHuge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="@string/input_phone_to_pair"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/etPhone"
                                style="@style/FontBlackNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="15dp"
                                android:drawableStart="@drawable/ic_phone_grey"
                                android:hint="@string/please_input_ta_phone"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:singleLine="true"/>
                        </android.support.design.widget.TextInputLayout>

                        <ImageView
                            android:id="@+id/ivContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            app:srcCompat="@drawable/ic_contact_accent"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnFind"
                        style="@style/FontWhiteNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/selector_btn_normal"
                        android:enabled="false"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="@string/find_ta"/>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="?attr/colorControlNormal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUserCardTop"
                            style="@style/FontPrimaryHuge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/ta_phone_2"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textStyle="bold"/>

                        <!-- 复合他人中 -->
                        <LinearLayout
                            android:id="@+id/llComplexTa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                style="@style/FontWhiteBig"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/complex_request_send_please_wait"
                                android:textStyle="bold"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/a_love_will_be_take_u_ready"/>

                            <Button
                                android:id="@+id/btnComplexTa"
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/selector_btn_normal"
                                android:foreground="?attr/selectableItemBackground"
                                android:paddingEnd="20dp"
                                android:paddingStart="20dp"
                                android:text="@string/i_go_back_forget_it"/>
                        </LinearLayout>

                        <!-- 被他人复合中 -->
                        <LinearLayout
                            android:id="@+id/llComplexByTa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                style="@style/FontWhiteBig"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/receive_ta_complex_request"
                                android:textStyle="bold"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/complex_after_all_back"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/refuse_after_can_again_invitee_other"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnComplexByTaRefuse"
                                    style="@style/FontWhiteNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/selector_btn_normal"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:paddingEnd="20dp"
                                    android:paddingStart="20dp"
                                    android:text="@string/cruel_refuse"/>

                                <Button
                                    android:id="@+id/btnComplexByTaAccept"
                                    style="@style/FontWhiteNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/selector_btn_normal"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:paddingEnd="20dp"
                                    android:paddingStart="20dp"
                                    android:text="@string/pleasure_accept"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- 邀请他人中 -->
                        <LinearLayout
                            android:id="@+id/llInviteeTa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                style="@style/FontWhiteBig"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/pair_request_send_please_wait"
                                android:textStyle="bold"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/new_trip_will_start_u_ready"/>

                            <Button
                                android:id="@+id/btnInviteeTa"
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/selector_btn_normal"
                                android:foreground="?attr/selectableItemBackground"
                                android:paddingEnd="20dp"
                                android:paddingStart="20dp"
                                android:text="@string/i_go_back_forget_it"/>
                        </LinearLayout>

                        <!-- 被他人邀请中 -->
                        <LinearLayout
                            android:id="@+id/llInviteeByTa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                style="@style/FontWhiteBig"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/receive_ta_pair_request"
                                android:textStyle="bold"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/accept_after_new_word_more_gesture"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/refuse_after_can_again_invitee_other"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnInviteeByTaRefuse"
                                    style="@style/FontWhiteNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/selector_btn_normal"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:paddingEnd="20dp"
                                    android:paddingStart="20dp"
                                    android:text="@string/cruel_refuse"/>

                                <Button
                                    android:id="@+id/btnInviteeByTaAccept"
                                    style="@style/FontWhiteNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/selector_btn_normal"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:paddingEnd="20dp"
                                    android:paddingStart="20dp"
                                    android:text="@string/pleasure_accept"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Ta正在被邀请 -->
                        <LinearLayout
                            android:id="@+id/llPairLate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                style="@style/FontWhiteBig"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/u_late_ta_been_invitee"
                                android:textStyle="bold"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/been_invitee_one_sync"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/wait_ta_refuse_other_invitee_u_come"/>

                            <Button
                                android:id="@+id/btnPairLate"
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/selector_btn_normal"
                                android:foreground="?attr/selectableItemBackground"
                                android:paddingEnd="20dp"
                                android:paddingStart="20dp"
                                android:text="@string/i_know"/>
                        </LinearLayout>

                        <!-- Ta已经配对了 -->
                        <LinearLayout
                            android:id="@+id/llCoupleExist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                style="@style/FontWhiteBig"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/ta_already_couple"
                                android:textStyle="bold"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/and_u_not_let_go"/>

                            <Button
                                android:id="@+id/btnCoupleExist"
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/selector_btn_normal"
                                android:foreground="?attr/selectableItemBackground"
                                android:paddingEnd="20dp"
                                android:paddingStart="20dp"
                                android:text="@string/i_know"/>
                        </LinearLayout>

                        <!-- 可以复合 -->
                        <LinearLayout
                            android:id="@+id/llComplexCan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                style="@style/FontWhiteBig"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/want_find_back_once_time"
                                android:textStyle="bold"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/complex_can_find_once_all"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnComplexCanSend"
                                    style="@style/FontWhiteNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/selector_btn_normal"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:paddingEnd="20dp"
                                    android:paddingStart="20dp"
                                    android:text="@string/send_complex_request"/>

                                <Button
                                    android:id="@+id/btnComplexCanCancel"
                                    style="@style/FontWhiteNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/selector_btn_normal"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:paddingEnd="20dp"
                                    android:paddingStart="20dp"
                                    android:text="@string/cancel"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- 可以配对 -->
                        <LinearLayout
                            android:id="@+id/llPairCan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                style="@style/FontWhiteBig"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/ta_already_no_couple"
                                android:textStyle="bold"/>

                            <TextView
                                style="@style/FontWhiteNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/more_gesture_after_couple"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnPairCanSend"
                                    style="@style/FontWhiteNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/selector_btn_normal"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:paddingEnd="20dp"
                                    android:paddingStart="20dp"
                                    android:text="@string/send_pair_request"/>

                                <Button
                                    android:id="@+id/btnPairCanCancel"
                                    style="@style/FontWhiteNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/selector_btn_normal"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:paddingEnd="20dp"
                                    android:paddingStart="20dp"
                                    android:text="@string/cancel"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.jiangzg.ita.view.GVerticalSwipeRefresh>
</LinearLayout>