<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/radius_normal"
    app:cardElevation="@dimen/elevation_normal"
    app:cardMaxElevation="@dimen/elevation_big">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 顶图 -->
        <com.jiangzg.mianmian.view.GImageView
            android:id="@+id/ivTop"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="?attr/selectableItemBackground"
            android:foreground="?attr/selectableItemBackground"
            app:actualImageScaleType="centerCrop"
            tools:scaleType="centerCrop"
            tools:src="@mipmap/test_bg_1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ivTop">

        </RelativeLayout>

        <!-- 头像 -->
        <com.jiangzg.mianmian.view.GImageAvatarView
            android:id="@+id/ivAvatarLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            tools:background="@mipmap/ic_boy_circle"/>

        <!-- 头像 -->
        <com.jiangzg.mianmian.view.GImageAvatarView
            android:id="@+id/ivAvatarRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="80dp"
            tools:background="@mipmap/ic_girl_circle"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
